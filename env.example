APP_NAME=TIXXETY
ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Database URLs
# For Docker: use db:5432
# For local dev: use localhost:5432
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/tixxety
SYNC_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/tixxety

